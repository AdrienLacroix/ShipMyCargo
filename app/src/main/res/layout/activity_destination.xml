<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aakashmaroti.fillup.Destination" >

    <ScrollView
        android:id="@+id/scrollViewDestination"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Locations"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkBoxAllIndia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="All India" />

                <CheckBox
                    android:id="@+id/checkBoxAllIndiaFTL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:text="All India for FTL" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/Bangalore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bangalore" />

                        <CheckBox
                            android:id="@+id/Chennai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chennai" />

                        <CheckBox
                            android:id="@+id/GreaterMumbai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Greater Mumbai" />

                        <CheckBox
                            android:id="@+id/Bhiwandi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bhiwandi" />

                        <CheckBox
                            android:id="@+id/Delhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delhi" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/Pune"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pune" />

                        <CheckBox
                            android:id="@+id/Baroda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Baroda" />

                        <CheckBox
                            android:id="@+id/Ahmedabad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahmedabad" />

                        <CheckBox
                            android:id="@+id/Noida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Noida" />

                        <CheckBox
                            android:id="@+id/Calcutta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calcutta" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/Hyderabad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hyderabad" />

                        <CheckBox
                            android:id="@+id/Indore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Indore" />

                        <CheckBox
                            android:id="@+id/Baddi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Baddi" />

                        <CheckBox
                            android:id="@+id/Faridabad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faridabad" />

                        <CheckBox
                            android:id="@+id/Nagpur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nagpur" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/Rudrapur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rudrapur" />

                        <CheckBox
                            android:id="@+id/Aurangabad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aurangabad" />

                        <CheckBox
                            android:id="@+id/Ghaziabad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghaziabad" />

                        <CheckBox
                            android:id="@+id/Hosur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hosur" />

                        <CheckBox
                            android:id="@+id/Vapi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vapi" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/Ludhiana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ludhiana" />

                        <CheckBox
                            android:id="@+id/Gurgaon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gurgaon" />

                        <CheckBox
                            android:id="@+id/Bhiwadi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bhiwadi" />

                        <CheckBox
                            android:id="@+id/Panjim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panjim" />

                        <CheckBox
                            android:id="@+id/NaviMumbai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navi Mumbai" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/Zirakpur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zirakpur" />

                        <CheckBox
                            android:id="@+id/Pithampur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pithampur" />

                        <CheckBox
                            android:id="@+id/Nasik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nasik" />

                        <CheckBox
                            android:id="@+id/MumbaiCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mumbai City" />

                        <CheckBox
                            android:id="@+id/Vasai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vasai" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/Dloc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Location(s) (Other):" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <MultiAutoCompleteTextView
                    android:id="@+id/DeliveryLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true" />
            </LinearLayout>

            <Button
                android:id="@+id/continueDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Continue" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>