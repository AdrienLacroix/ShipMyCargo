<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aakashmaroti.fillup.Route">

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/buttonAddField"
            android:layout_centerHorizontal="true"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/buttonSubmitFromRouteFinal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llout"
        android:layout_below="@+id/button_layout"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/BookingMACTV"
            android:layout_width="0dp"
            android:layout_alignParentTop="true"
            android:layout_weight="2"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"
            android:hint="Booking"
            android:ems="10" />

        <MultiAutoCompleteTextView
            android:id="@+id/DestinationMACTV"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_alignParentTop="true"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"
            android:hint="Delivery"
            android:ems="10" />
    </LinearLayout>
<!--
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonAddField"
        android:layout_centerHorizontal="true"/>
 -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/llout"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>
